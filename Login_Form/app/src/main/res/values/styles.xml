<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textStyle">
        <item name="android:textColor">#fff</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">#000</item>
    </style>

    <style name="editStyle">
        <item name="android:textColorHint">#fff</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:ems">12</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="checkStyle">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">#d07669</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="rtextStyle">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="detailstyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="fragment_text">

    <item name="android:textColor">#ffacacac</item>

    <item name="android:textSize">25sp</item>

</style>

</resources>
