<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.razzon.login_form.searchdiseases"
    android:background="#d07669">

    <TextView android:id="@+id/diseases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disease Prediction"
        android:textSize="25sp"
        android:paddingTop="15dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />


        <EditText android:id="@+id/symptom"
            android:layout_below="@+id/diseases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter any Symptom"
            style="@style/editStyle"
            android:ems="15"
            />
<Button android:id="@+id/next"
    android:layout_width="wrap_content"
    android:layout_below="@+id/symptom"
    android:layout_centerInParent="true"
    android:text="Next"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content" />

</RelativeLayout>
